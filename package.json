{
  "name": "classroom",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">20.0.0"
  },
  "proxy": "http://localhost:3333",
  "scripts": {
    "lint": "lerna run --parallel lint",
    "start": "lerna run --parallel start",
    "start:client": "npm start --workspace packages/client",
    "start:server": "npm start --workspace packages/server",
    "test": "npm run test:client && npm run test:server",
    "test:client": "npm run test --watchAll=false --workspace packages/client ",
    "test:server": "npm run test --workspace packages/server"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "lerna": "^6.6.2",
    "prettier": "^2.8.8"
  },
  "workspaces": [
    "packages/*"
  ]
}
